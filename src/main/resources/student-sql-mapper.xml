<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.hao.myBatis.StudentMapper">
   
    <!-- 创建表 -->
    <update id="create">
        create table if not exists student (id int primary key auto_increment, name varchar(20), birth DATE, gender bit, teacher varchar(20));
    </update>
    
    <!-- 添加数据 -->
    <insert id="add" parameterType="com.hao.personnel.information.Student">
        insert into student(name,birth,gender,teacher) value(#{name},#{birth},#{gender},#{teacher});
    </insert>
    
    <!-- 删除数据 -->
    <delete id="delById" parameterType="int">
        delete from student where id = #{id};
    </delete>
    
    <!-- 修改数据 -->
    <update id="update" parameterType="com.hao.personnel.information.Student">
        update student set name=#{name},birth=#{birth},gender=#{gender},teacher=#{teacher}, where id=#{id};
    </update>
    
    <!--根据id查询得到一个user对象-->
    <select id="getById" parameterType="int" resultType="com.hao.personnel.information.Student">
        select * from student where id=#{id};
    </select>
    
    <!-- 查询所有的用户 -->
    <select id="list" resultType="com.hao.personnel.information.Student">
        select * from student;
    </select>
</mapper>